    <script type="text/javascript" type="module">
      let mapBgColor =
        (localStorage.getItem("theme") || "dark") === "dark"
          ? "black"
          : "white";
      const tileLayer = new ol.layer.Tile({
        // opacity: 0.7,
        source: new ol.source.TileImage({
          attributions: "",
          tileGrid: new ol.tilegrid.TileGrid({
            extent: [0, 0.779308716828381876, 160980.000024848414, 17764],
            origin: [0, 0.779308716828381876],
            resolutions: [
              1024.01272239340028, 512.006361196700141, 256.00318059835007,
              128.001590299175035, 64.0007951495875176, 32.0003975747937588,
              16.0001987873968794, 8.0000993936984397, 4.00004969684921985,
              2.00002484842460992, 1.00001242421230496,
            ],
            tileSize: [256, 256],
          }),
          tileUrlFunction: function (tileCoord) {
            return `./tiles_directory_${mapBgColor}_10/{z}/{x}/{y}.png`
              .replace("{z}", String(tileCoord[0]))
              .replace("{x}", String(tileCoord[1]))
              .replace("{y}", String(-1 - tileCoord[2]));
          },
        }),
      });
      const layer = new ol.layer.Group({
        title: "Overlay",
        layers: [tileLayer],
      });

      // var mousePositionControl = new ol.control.MousePosition({
      //   className: "custom-mouse-position",
      //   target: document.getElementById("mouse-position"),
      //   undefinedHTML: "&nbsp;",
      // });
      const { center, zoom } = getCenterAndZoom();

      var map = new ol.Map({
        controls: [], // ol.control.defaults.defaults().extend([mousePositionControl]),
        target: "map",
        layers: [layer],
        view: new ol.View({
          center: center,
          zoom: zoom,
          maxZoom: 18,
          extent: [0, 0, 160980, 17450],
          enableRotation: false,
        }),
      });

      document.getElementById("zoom-in").addEventListener("click", () => {
        map.getView().animate(
          {
            zoom: map.getView().getZoom() + 0.66,
            duration: 250,
          },
          () => {
            updateMapState();
          }
        );
      });
      document.getElementById("zoom-out").addEventListener("click", () => {
        map.getView().animate(
          {
            zoom: map.getView().getZoom() - 0.66,
            duration: 250,
          },
          () => {
            updateMapState();
          }
        );
      });
      var view = map.getView();
      renderLabels(view, map);
      renderMapPreviewPosition(view, map);

      function updateMapState() {
        updateUrlParameters({
          center: view.getCenter(),
          zoom: view.getZoom(),
        });
        renderLabels(view, map);
        renderMapPreviewPosition(view, map);
      }
      let start, previousTimeStamp;
      //view.on("change:resolution", updateMapState);
      function scheduleUpdateMapState(timeStamp) {
        if (start === undefined) {
          start = timeStamp;
        }
        const elapsed = timeStamp - start;

        if (previousTimeStamp !== timeStamp) {
          updateMapState();
        }

        if (elapsed < 200) {
          // Stop the animation after 2 seconds
          previousTimeStamp = timeStamp;

          window.requestAnimationFrame(scheduleUpdateMapState);
        }
      }
      //window.requestAnimationFrame(scheduleUpdateMapState);
      window.addEventListener("resize", updateMapState);
      view.on("change:zoom", updateMapState);
      view.on("change:center", updateMapState);
    </script>
